{
  "source": "./packages",
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-typescript-plugin"
    },
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {
          "enable": false
        },
        "undocumentIdentifier": {
          "enable": false
        }
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [
          {"from": "^/packages/(.*)/src/(.*)$", "to": "$1/$2"}
        ]
      }
    }
  ],
  "excludes": [
    "/node_modules/",
    "/__tests__/"
  ]
}
