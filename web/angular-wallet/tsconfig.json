{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@fuse": ["@fuse/"],
      "@burstjs/core": ["../../../lib/packages/core"],
      "@burstjs/crypto": ["../../../lib/packages/crypto"],
      "@burstjs/util": ["../../../lib/packages/util"],
      "@burstjs/http": ["../../../lib/packages/http"]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
